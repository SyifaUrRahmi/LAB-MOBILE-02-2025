<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape indicator at bottom -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="10dp" /> <!-- Ubah di sini -->
            <solid android:color="#A4A9AF" />
            <corners android:radius="50dp" />
        </shape>
        <gravity android:gravity="bottom|center_horizontal" />
    </item>

    <!-- Icon image on top -->
    <item android:drawable="@drawable/addfeed" />

</layer-list>
