<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_marginBottom="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        >
        <ImageButton
            android:id="@+id/profilFeed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/contohsorotan"
            android:background="@drawable/bulatlingkaran"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
        
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rsky.auliyah"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/more"
            android:tint="@color/white"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/fotofeed"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:src="@drawable/contohsorotan"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/heart"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_gravity="center"
            />
        <ImageButton
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/speech"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_gravity="center"
            />
        <ImageButton
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/send"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bookmark"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_gravity="center"
            />

    </LinearLayout>

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <TextView
            android:id="@+id/usernameCaption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="rsky.auliyah"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/caption"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HalloðŸ˜¸"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tanggal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:text="18 April 2025"
        android:textColor="#736F6F"
        />

</LinearLayout>