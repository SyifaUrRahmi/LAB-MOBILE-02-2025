<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer gradient border -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:angle="0"
                android:startColor="#F58529"
                android:centerColor="#DD2A7B"
                android:endColor="#8134AF"
                android:useLevel="false"/>
        </shape>
    </item>

    <!-- Inner transparent circle to create the ring effect -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" /> <!-- Background hitam -->
        </shape>
    </item>
</layer-list>
