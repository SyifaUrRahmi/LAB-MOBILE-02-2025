<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSorotan">

    <ImageView
        android:id="@+id/imagesorotan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sorotan1"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:elevation="4dp"
        >
        <ImageView
            android:id="@+id/imageProfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bulatlingkaran"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:scaleType="centerCrop"
            android:src="@drawable/contohsorotan"
            />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/namasorotan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorotan1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tanggalsorotan"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 April 2025"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>