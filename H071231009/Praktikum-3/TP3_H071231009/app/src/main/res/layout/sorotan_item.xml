<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp">

        <!-- Lingkaran Gradasi Border -->
        <FrameLayout
            android:id="@+id/frameBorder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_border_story"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageSorotan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bulatlingkaran"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/contohsorotan"/>
        </FrameLayout>


        <!-- Ikon Tambah -->
        <ImageView
            android:id="@+id/iconTambah"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/plusgambar"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:padding="3dp"
            android:elevation="2dp"/>
    </FrameLayout>

    <!-- Teks Nama Sorotan -->
    <TextView
        android:id="@+id/textSorotan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rsky.auliyah"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"/>
</LinearLayout>
